{
  "compilerOptions": {
    "target": "es2016",                                 
    "module": "CommonJS",                               
    "rootDir": "./src/",                                 
    "moduleResolution": "node",               
    "baseUrl": ".",                                                              
    "outDir": "./dist/",                                  
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,
    "useUnknownInCatchVariables": false                         
  },
  "ts-node": { "transpileOnly": true },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/**/*.spec.ts"]
}
